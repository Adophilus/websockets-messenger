{
  "include": ["./run.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "outDir": "./build"
  }
}
